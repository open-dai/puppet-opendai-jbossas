# General configuration for the init.d scripts,
# not necessarily for JBoss AS itself.

# The username who should own the process.
#
JBOSS_USER=<%= scope.lookupvar('jbossas::jboss_user') %>

# 'public' interface Bind address
JBOSS_BIND_ADDRESS=<%= scope.lookupvar('jbossas::bind_address') %>

# HOME as set by puppet
JBOSS_HOME=<%= scope.lookupvar('jbossas::deploy_dir') %>

# The amount of time to wait for startup
#
# STARTUP_WAIT=30

# The amount of time to wait for shutdown
#
# SHUTDOWN_WAIT=30

